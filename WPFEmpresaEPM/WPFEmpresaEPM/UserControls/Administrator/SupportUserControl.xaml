<UserControl x:Class="WPFEmpresaEPM.UserControls.Administrator.SupportUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFEmpresaEPM.UserControls.Administrator"
             mc:Ignorable="d" 
             Height="200" 
             Width="400"
             Background="Transparent" >
    <Grid>
        <Image 
            Source="/Images/others/soporte.png"
            Height="150"
            Width="150"
            HorizontalAlignment="Left"
            Margin="0,0,0,0"
            Stretch="Uniform"
        />
        <TextBlock 
            FontSize="20"
            HorizontalAlignment="Left"
            VerticalAlignment="Center"
            Margin="200,0,0,50"
            FontWeight="Bold"
            Text="Línea de soporte"
        />
        <TextBlock 
            x:Name="txtNumberPhone"
            FontSize="20"
            HorizontalAlignment="Left"
            VerticalAlignment="Bottom"
            Margin="200,0,0,50"
            FontWeight="Bold"
        />
    </Grid>
</UserControl>
